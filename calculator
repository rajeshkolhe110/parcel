<body>
  <div class="calculator">
    <h2>AutoMekz Jumbo Display Calculator</h2>

    <label for="model">Select Display Model:</label>
    <select id="model">
      <option value="34,24">1.00" (34x24 mm)</option>
      <option value="69.7,47.8">2.30" (69.7x47.8 mm)</option>
      <option value="122,90">4.00" (122x90 mm)</option>
	  <option value="163,111.5">6.00" (183x111.5 mm)</option>
      <option value="220,142">8.00" (234x142 mm)</option>
	  <option value="320,160">P10 (320x160 mm)</option>
    </select>

    

    <label>Columns:</label>
    <input type="number" id="columns" value="4">
	
    <label>Rowgap:</label>
    <input type="number" id="rowgap" value="0">
	
	<label>Rows:</label>
    <input type="number" id="rows" value="1">
    <label>Top Frame (mm):</label>
    <input type="number" id="top" value="25">

    <label>Bottom Frame (mm):</label>
    <input type="number" id="bottom" value="25">

    <label>Left Frame (mm):</label>
    <input type="number" id="left" value="25">

    <label>Right Frame (mm):</label>
    <input type="number" id="right" value="25">

    <button onclick="calculate()">Calculate Dimensions</button>

    <div class="result" id="result"></div>
  </div>

  <script>
    function calculate() {
      const [dispHeight, dispWidth] = document.getElementById("model").value.split(',').map(Number);
      const rows = parseInt(document.getElementById("rows").value);
	  const gap = parseFloat(document.getElementById("rowgap").value);
      const cols = parseInt(document.getElementById("columns").value);
      const top = parseFloat(document.getElementById("top").value);
      const bottom = parseFloat(document.getElementById("bottom").value);
      const left = parseFloat(document.getElementById("left").value);
      const right = parseFloat(document.getElementById("right").value);

      const totalHeight = (dispHeight * rows) + top + bottom+gap;
      const totalWidth = (dispWidth * cols) + left + right;

      const heightInches = (totalHeight / 25.4).toFixed(2);
      const widthInches = (totalWidth / 25.4).toFixed(2);

      document.getElementById("result").innerHTML = `
        Total Dimensions:<br>
        Height: ${totalHeight} mm (${heightInches} inches)<br>
        Width: ${totalWidth} mm (${widthInches} inches)
      `;
    }
  </script>
